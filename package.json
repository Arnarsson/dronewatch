{
  "name": "dronewatch-live",
  "version": "2.0.0",
  "private": true,
  "type": "module",
  "description": "Professional drone incident monitoring system with real-time updates",
  "scripts": {
    "start": "node automation/server.js",
    "dev": "node automation/server.js",
    "serve": "python3 -m http.server 8081",
    "update": "node automation/live-update-service.js",
    "scrape": "node automation/scrapers/rss-news-scraper.js",
    "build": "rm -rf dist && mkdir -p dist && cp index-live.html dist/index.html && cp incidents.json dist/incidents.json",
    "vercel-build": "npm run build",
    "build-assets": "python3 tools/build_assets.py",
    "automation": "node automation/index.js run",
    "automation:start": "node automation/index.js start",
    "automation:continuous": "node automation/continuous-monitor.js",
    "test": "npm run test:scraper && npm run test:enhanced && npm run test:final",
    "test:scraper": "node test-scraper.js",
    "test:enhanced": "node test-enhanced-scraper.js",
    "test:final": "node test-final-coverage.js"
  },
  "dependencies": {
    "@tensorflow/tfjs": "^4.22.0",
    "@tensorflow/tfjs-node": "^4.22.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "node-cron": "^3.0.3",
    "rss-parser": "^3.13.0",
    "node-fetch": "^3.3.2",
    "cheerio": "^1.0.0-rc.12",
    "ws": "^8.14.2",
    "playwright": "^1.55.1",
    "xml2js": "^0.6.2"
  },
  "engines": {
    "node": "20.x"
  },
  "keywords": [
    "drone",
    "incident",
    "tracking",
    "automation",
    "europe",
    "security",
    "aviation"
  ],
  "devDependencies": {
    "@playwright/test": "^1.55.1"
  }
}
