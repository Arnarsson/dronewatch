# DroneWatch Environment Configuration
# Copy this file to .env and configure with your values

# Server Configuration
PORT=8081
NODE_ENV=production

# AI Analysis (OpenRouter)
# Get free API key at: https://openrouter.ai
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Geocoding Service (OpenCage)
# Get free API key at: https://opencagedata.com (2500 req/day free)
OPENCAGE_API_KEY=your_opencage_api_key_here

# Twitter/X Scraping
# Set to 'true' to enable real Twitter scraping (requires Playwright)
ENABLE_TWITTER_SCRAPING=false

# Alert Notifications
# Webhook URL for critical alerts (Discord, Slack, etc.)
ALERT_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Email alerts (requires email service configuration)
ALERT_EMAIL=security@yourcompany.com

# SMS alerts (requires SMS service like Twilio)
ALERT_SMS=+1234567890

# Alert Thresholds
ALERT_SEVERITY_THRESHOLD=7
ALERT_MAX_PER_HOUR=20

# Data Retention
RETENTION_DAYS=30
MAX_INCIDENTS=1000

# Update Intervals (minutes)
UPDATE_INTERVAL=15
BREAKING_NEWS_INTERVAL=5

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000

# Logging
LOG_LEVEL=info
LOG_FILE=/var/log/dronewatch/app.log

# Database (future enhancement)
# DATABASE_URL=postgresql://user:pass@localhost/dronewatch

# NOTAM Integration (future enhancement)
# NOTAM_API_KEY=your_notam_api_key_here
# NOTAM_ENDPOINT=https://api.notams.faa.gov/v1

# Twitter API (if using official API instead of scraping)
# TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here
# TWITTER_API_KEY=your_api_key_here
# TWITTER_API_SECRET=your_api_secret_here

# Backup Storage (future enhancement)
# AWS_ACCESS_KEY_ID=your_aws_key_here
# AWS_SECRET_ACCESS_KEY=your_aws_secret_here
# AWS_REGION=eu-central-1
# S3_BACKUP_BUCKET=dronewatch-backups

# Performance Monitoring (future enhancement)
# NEW_RELIC_LICENSE_KEY=your_new_relic_key_here
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id